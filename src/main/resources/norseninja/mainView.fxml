<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="norseninja.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#logoutButtonClicked" text="Log out" />
              <MenuItem mnemonicParsing="false" onAction="#exitApplication" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" />
         </children>
      </VBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="2.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="textArea" editable="false" prefHeight="400.0" prefWidth="200.0" />
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label minWidth="20.0" text="To: " />
                  <ChoiceBox fx:id="userBox" minWidth="100.0" prefWidth="150.0" />
                  <Label minWidth="60.0" text="Message: " />
                  <TextField fx:id="inputField" prefWidth="1000.0" promptText="Write message" />
                  <Button minWidth="50.0" mnemonicParsing="false" onAction="#sendMessageButtonClicked" text="Send" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets left="2.0" right="2.0" />
   </padding>
</BorderPane>
